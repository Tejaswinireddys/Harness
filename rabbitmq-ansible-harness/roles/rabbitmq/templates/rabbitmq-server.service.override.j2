# Systemd service override for RabbitMQ
# Generated by Harness CD Pipeline
# Timestamp: {{ ansible_date_time.iso8601 }}

[Service]
# Increase file descriptor limit
LimitNOFILE={{ system_ulimits.nofile.hard | default(65536) }}

# Increase process limit
LimitNPROC={{ system_ulimits.nproc.hard | default(65536) }}

# Memory limit (optional - set to 0 for unlimited)
# MemoryLimit=0

# Restart policy
Restart=on-failure
RestartSec=10

# Timeout for stop
TimeoutStopSec=120
